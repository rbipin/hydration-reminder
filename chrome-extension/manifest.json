{
  "name": "Hydration Reminder",
  "version": "1.0",
  "version_name":"1.0.0 rc1",
  "description": "Remind you to drink water, you can configure at a 15 minute interval to be reminded. This sends a chrome notification",
  "author": "Bipin Radhakrishnan",
  "manifest_version": 2,
  "permissions":[
    "storage",
    "notifications"
  ],
  "icons": {
    "16": "assets/icons/bottle-16.png",
    "32": "assets/icons/bottle-32.png",
    "48": "assets/icons/bottle-48.png",
    "128": "assets/icons/bottle-100.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "assets/icons/bottle-16.png",
      "32": "assets/icons/bottle-32.png",
      "48": "assets/icons/bottle-48.png",
      "128": "assets/icons/bottle-100.png"
    },
    "default_popup":"src/html/popup.html",
    "default_title": "Hydration Reminder"
  },
  "background": {
    "scripts": ["src/js/background.js"],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}